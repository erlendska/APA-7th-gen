{
  "manifest_version": 3,
  "name": "APA7th-generator",
  "description": "Fetches a reference to the current page in APA-7th style.",
  "version": "1",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }, 
  "permissions": ["activeTab", "clipboardWrite", "tabs", "scripting"], 
  "background": { 
    "type": "module"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }, 
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}